<div class="contrainer text-center">
    <div class="row">
        <div class="col-sm-5"></div>
        <h1><span class="fa fa-fire"></span>Eat-Da-Burger</h1>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-12">
            <form class="create-form">
                <div class="form-group">
                    <label for="burger-name">Burger Name:</label>
                    <input type="text" id="burger-name" name="name">
                    <button type="submit" class="btn btn-primary">Add A Burger</button>
                </div>
            </form>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div class="row">
                    <h5>{{id}}- {{burger_name}}</h5>
                    <button type="button" class="btn btn-primary change-devoured" data-id={{id}}>Devour it!</button>
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-3">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <h5></h5>{{id}}- {{burger_name}}</h5>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
